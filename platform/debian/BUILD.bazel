load("//bazel:package.bzl", "homeworld_aci")
load(":debian.bzl", "debootstrap")

SNAPSHOT = "20180710T043017Z"

debootstrap(
    name = "debian.tgz",
    release = "stretch",
    mirror = "http://snapshot.debian.org/archive/debian/" + SNAPSHOT + "/",
    variant = "minbase",
    extra = [
        "bzip2",
        "curl",
        "ca-certificates",
        "dnsutils",
        "file",
        "git",
        "gnupg",
        "gzip",
        "iproute2",
        "iptables",
        "iputils-arping",
        "iputils-ping",
        "less",
        "net-tools",
        "netcat-traditional",
        "python",
        "python3",
        "realpath",
        "wget",
    ],
    clean_opts = [
        "apt_files",
        "ld_aux",
        "pycache",
        "resolv_conf",
    ],
    visibility = ["//visibility:public"],
)

homeworld_aci(
    name = "debian",
    deps = [":debian.tgz"],
    aciname = "homeworld.private/debian",
    exec = ["/bin/bash"],
    visibility = ["//visibility:public"],
)

debootstrap(
    name = "debian-mini.tgz",
    release = "stretch",
